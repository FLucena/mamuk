{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "outDir": "./dist-server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/server.ts", "src/api/**/*", "src/config/**/*", "src/models/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
} 